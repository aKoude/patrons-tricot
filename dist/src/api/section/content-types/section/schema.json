{
    "kind": "collectionType",
    "collectionName": "sections",
    "info": {
        "singularName": "section",
        "pluralName": "sections",
        "displayName": "Section"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "sectionNumber": {
            "type": "integer",
            "required": true,
            "default": 1
        },
        "description": {
            "type": "text",
            "required": false
        },
        "pattern": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::pattern.pattern",
            "inversedBy": "sections"
        },
        "patternSize": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::pattern-size.pattern-size",
            "inversedBy": "sections"
        },
        "steps": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::step.step",
            "mappedBy": "section"
        },
        "pattern_notes": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::pattern-note.pattern-note",
            "mappedBy": "section"
        }
    }
}
