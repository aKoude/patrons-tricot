{
  "kind": "collectionType",
  "collectionName": "patterns",
  "info": {
    "singularName": "pattern",
    "pluralName": "patterns",
    "displayName": "Pattern"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "difficulty": {
      "type": "enumeration",
      "required": true,
      "default": "débutant",
      "enum": [
        "débutant",
        "intermédiaire",
        "avancé"
      ]
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "tricot",
        "crochet"
      ]
    },
    "type": {
      "type": "string",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "estimatedTime": {
      "type": "string"
    },
    "materials": {
      "type": "richtext",
      "required": true
    },
    "tags": {
      "type": "string",
      "required": false
    },
    "creditCost": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "hasSizes": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "hasGauge": {
      "type": "boolean",
      "required": false,
      "default": false
    },
    "gaugeInfo": {
      "type": "json",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "hasGauge"
            },
            true
          ]
        }
      }
    },
    "patternSizes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::pattern-size.pattern-size",
      "mappedBy": "pattern"
    },
    "sections": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::section.section",
      "mappedBy": "pattern"
    },
    "userAccesses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-pattern-access.user-pattern-access",
      "mappedBy": "pattern"
    },
    "pattern": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-progress.user-progress",
      "mappedBy": "progresses"
    },
    "pattern_notes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::pattern-note.pattern-note",
      "mappedBy": "pattern"
    }
  }
}
