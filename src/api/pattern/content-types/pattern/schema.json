{
  "kind": "collectionType",
  "collectionName": "patterns",
  "info": {
    "singularName": "pattern",
    "pluralName": "patterns",
    "displayName": "Pattern"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "difficulty": {
      "type": "enumeration",
      "required": true,
      "default": "débutant",
      "enum": [
        "débutant",
        "intermédiaire",
        "avancé"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "tricot",
        "crochet"
      ]
    },
    "type": {
      "type": "string"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "estimatedTime": {
      "type": "string",
      "required": false
    },
    "materials": {
      "type": "blocks",
      "required": true
    },
    "tags": {
      "type": "text",
      "required": true
    },
    "sections": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::section.section",
      "mappedBy": "pattern"
    }
  }
}
